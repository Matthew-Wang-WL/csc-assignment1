@section scripts
{
    <script>
        $(document).ready(function () {
            $('#myBtn').on('click', function () {
                event.preventDefault();

                
                var clientId = "STG2-MYINFO-SELF-TEST"
                var attributes = "uinfin,name,sex,race,nationality,dob,email,mobileno,regadd,housingtype,hdbtype,marital,edulevel,noa-basic,ownerprivate,cpfcontributions,cpfbalances"
                var purpose = "demonstrating MyInfo APIs"
                var state = "123"
                var redirectUrl = /*"https://localhost:44399/Home/Login"*/ "http://localhost:3001/callback" 

                var currentUrl = "https://sandbox.api.myinfo.gov.sg/com/v3/authorise?client_id=" + clientId + "&attributes=" + attributes + "&purpose=" + purpose + "&state=" + encodeURIComponent(state) + "&redirect_uri=" + redirectUrl
                console.log(currentUrl);
                window.location = currentUrl;
            })
        });
    </script>
}
